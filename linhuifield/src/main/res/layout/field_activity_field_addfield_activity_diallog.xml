<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/addfield_dialog_setup_new_field_layout"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_establish_two_five"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/home_area_drop_marginleft"
                        android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                        android:textColor="@color/white"
                        android:text="@string/addfield_setup_new_field_text"
                        android:id="@+id/addfield_dialog_setup_new_field_text"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/addfield_dialog_copy_new_field_layout"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_template_two_five"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/home_area_drop_marginleft"
                        android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                        android:textColor="@color/white"
                        android:text="@string/addfield_copy_new_field_text"
                        android:id="@+id/addfield_dialog_copy_new_field_text"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/addfield_dialog_agency_field_layout"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_agentsite_three"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/home_area_drop_marginleft"
                        android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                        android:textColor="@color/white"
                        android:text="@string/addfield_agency_field_tv_str"
                        android:id="@+id/addfield_dialog_agency_field_text"/>
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/order_type_layoutwidth"
                android:layout_marginBottom="@dimen/order_type_layoutwidth"
                android:src="@drawable/ic_close_two_four"
                android:id="@+id/addfield_dialog_close_img"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
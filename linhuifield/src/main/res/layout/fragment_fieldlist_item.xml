<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/addshoppingcard_width"
            android:background="@color/white">
            <ImageView
                android:layout_width="@dimen/add_lab_width"
                android:layout_height="@dimen/add_lab_width"
                android:id="@+id/imageView"
                android:layout_marginLeft="@dimen/field_info_txt_marginleft"
                android:layout_marginTop="@dimen/field_info_txt_marginleft"
                android:layout_marginBottom="@dimen/field_info_txt_marginleft"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/field_info_marginleft"
                android:layout_marginLeft="@dimen/txt_padding"
                android:layout_marginBottom="@dimen/txt_padding"
                android:paddingLeft="@dimen/tab_item_img_margintop"
                android:paddingRight="@dimen/tab_item_img_margintop"
                android:layout_alignLeft="@+id/imageView"
                android:layout_alignBottom="@+id/imageView"
                android:text="小区"
                android:visibility="gone"
                android:background="@drawable/activity_fieldinfo_new_fieldtype_bg"
                android:gravity="center"
                android:id="@+id/fieldlist_item_resourcestype_laber"
                android:textColor="@color/white"
                android:textSize="@dimen/tab_txt_size" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/imageView"
                android:paddingTop="@dimen/txt_padding_left"
                android:paddingLeft="@dimen/txt_padding_left"
                android:paddingRight="@dimen/app_backbtn_marginleft">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/field_title_value"
                    android:textSize="@dimen/login_leftright_txt_size"
                    android:textColor="@color/top_title_center_txt_color"
                    android:textIsSelectable="false"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginTop="@dimen/title_bar_back_layout_width"
                    android:id="@+id/field_price_value"
                    android:textSize="@dimen/text_title_size_next"
                    android:textColor="@color/default_redbg"
                    android:text="" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/field_address_value"
                    android:singleLine="true"
                    android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/title_bar_back_layout_width"
                    android:textColor="@color/color_release_first"
                    android:text="" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:paddingTop="@dimen/title_bar_back_marginLeft"
            android:paddingBottom="@dimen/txt_padding_left"
            android:visibility="gone"
            android:id="@+id/fieldlist_item_field_operation_layout">
            <TextView
                android:layout_width="@dimen/add_lab_width"
                android:layout_height="@dimen/field_list_item_label"
                android:id="@+id/field_shelves"
                android:visibility="gone"
                android:text="@string/field_subtract"
                android:textColor="@color/default_bluebg"
                android:gravity="center"
                android:background="@drawable/choosespecifications_pricetxtselect"
                android:layout_marginRight="@dimen/app_backbtn_marginleft"
                android:focusable="false"/>
            <TextView
                android:layout_width="@dimen/add_lab_width"
                android:layout_height="@dimen/field_list_item_label"
                android:id="@+id/field_added"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/field_add"
                android:layout_marginRight="@dimen/app_backbtn_marginleft"
                android:textColor="@color/default_bluebg"
                android:background="@drawable/choosespecifications_pricetxtselect"
                android:focusable="false"/>
            <TextView
                android:layout_width="@dimen/add_lab_width"
                android:layout_height="@dimen/field_list_item_label"
                android:id="@+id/field_editorbtn"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginRight="@dimen/app_backbtn_marginleft"
                android:text="@string/invoiceinfo_editor_address_txt"
                android:textColor="@color/default_bluebg"
                android:background="@drawable/choosespecifications_pricetxtselect"
                android:focusable="false"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/txt_padding_left"
            android:background="@color/app_linearlayout_bg"
            android:id="@+id/fieldlist_item_view">
        </View>
    </LinearLayout>

</RelativeLayout>
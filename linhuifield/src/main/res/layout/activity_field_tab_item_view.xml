<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/searchlist_item_txt_margintop"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/white"
        android:id="@+id/field_tab_item_all_ll">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/field_tabitem_imageview"
                android:layout_width="@dimen/maintab_img_width_height"
                android:layout_height="@dimen/maintab_img_width_height"
                android:layout_centerHorizontal="true"
                android:focusable="false"
                >
            </ImageView>

            <TextView
                android:id="@+id/field_tabitem_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/field_tabitem_imageview"
                android:text="首页"
                android:layout_marginTop="@dimen/maintab_width_margintop"
                android:textSize="@dimen/tab_txt_size"
                android:textColor="@color/orderconfirm_success_bottom_btntextcolor">
            </TextView>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
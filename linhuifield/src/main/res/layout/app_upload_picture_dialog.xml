<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="@dimen/advertising_tffs_width"
        android:paddingRight="@dimen/advertising_tffs_width">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_upload_picture_dialog_height"
            android:visibility="visible"
            android:id="@+id/fieldinfo_refunt_price_detailed_layout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/app_upload_picture_dialog_bg"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:id="@+id/refund_difference_price_layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/refunt_price_text"
                    android:textStyle="bold"
                    android:textColor="@color/app_big_headline_tv_color"
                    android:textSize="@dimen/user_info_photo_txt_size"
                    android:text="@string/choose_upload_type_tv_str"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/paddingleft"
                        android:paddingLeft="@dimen/diogle_view_btn_height"
                        android:paddingRight="@dimen/diogle_view_btn_height">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/upload_photo_ll">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_photo_three_one"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tab_item_img_margintop"
                                android:textSize="@dimen/login_leftright_txt_size"
                                android:textColor="@color/app_big_headline_tv_color"
                                android:text="@string/choose_upload_tv_str"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:id="@+id/upload_picture_ll">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_picture_three_one"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tab_item_img_margintop"
                                android:textSize="@dimen/login_leftright_txt_size"
                                android:textColor="@color/app_big_headline_tv_color"
                                android:text="@string/choose_upload_picture_tv_str"/>

                        </LinearLayout>
                    </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
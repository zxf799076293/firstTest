<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_linearlayout_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_backbtn_marginleft"
            android:src="@drawable/ic_closed_black_three_six"
            android:id="@+id/addfield_search_close_imgv"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/app_backbtn_marginleft"
            android:layout_marginLeft="@dimen/app_backbtn_marginleft"
            android:orientation="horizontal"
            android:background="@drawable/activity_search_field_area_tv_bg"
            android:gravity="center_vertical">
            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_margin_width"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/activity_search_field_area_tv_bg"
                android:drawableLeft="@drawable/img_search"
                android:drawablePadding="@dimen/maintab_paddingtop"
                android:paddingLeft="@dimen/maintab_paddingtop"
                android:id="@+id/template_search_resource_edit"
                android:singleLine="true"
                android:hint="@string/module_addfield_search_res_edit_hint"
                android:gravity="center_vertical"
                android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                android:textColorHint="@color/module_addfield_search_src_edithint_color"
                android:textColor="@color/headline_tv_color"
                android:imeOptions="actionSearch"/>
            <RelativeLayout
                android:layout_width="@dimen/btn_margin_width"
                android:layout_height="@dimen/home_area_drop_height"
                android:visibility="gone"
                android:background="@drawable/activity_search_field_area_tv_bg"
                android:id="@+id/addfield_search_src_keyword_close_rl">
                <TextView
                    android:layout_width="@dimen/myself_margintop"
                    android:layout_height="@dimen/myself_margintop"
                    android:background="@drawable/ic_close_blue"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_title_height"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="@color/white"
        android:id="@+id/addfield_search_res_no_ll"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/txt_title_size_small"
            android:textColor="@color/fieldinfo_specifications_property_bg_color"
            android:text="@string/module_addfield_search_res_no_data"
            android:layout_marginLeft="@dimen/app_backbtn_marginleft"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_more_gary"
            android:layout_marginRight="@dimen/txt_margin"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/addfield_search_res_list_ll"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/order_title_height"
            android:background="@color/white"
            android:id="@+id/addfield_search_res_add_new_ll"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_backbtn_marginleft"
                android:layout_weight="1"
                android:text="@string/module_addfield_search_res_add"
                android:textColor="@color/fieldinfo_specifications_property_bg_color"
                android:textSize="@dimen/txt_title_size_small" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/txt_margin"
                android:src="@drawable/icon_more_gary" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/txt_padding_line"
            android:background="@color/new_viewbg">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/order_title_height"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="@dimen/txt_title_size_small"
                android:textColor="@color/register_edit_color"
                android:text="@string/module_addfield_search_res_have_data_hint"
                android:layout_marginLeft="@dimen/app_backbtn_marginleft"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_padding_line"
                android:background="@color/new_viewbg"
                android:layout_marginLeft="@dimen/app_backbtn_marginleft"
                android:layout_marginRight="@dimen/app_backbtn_marginleft">
            </View>
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_linearlayout_bg"
            android:divider="@null"
            android:id="@+id/template_search_resource_listview">
        </ListView>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_linearlayout_bg">
    <include
        layout="@layout/linhui_business_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_linelayout_height"
        android:background="@color/top_title_line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_type_layoutwidth"
        android:orientation="horizontal"
        android:background="@color/tab_gb"
        android:paddingLeft="@dimen/app_backbtn_marginleft"
        android:paddingRight="@dimen/app_backbtn_marginleft">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_title_size_info"
                android:textColor="@color/default_bluebg"
                android:text="@string/wallet_open_authenticate_text"
                android:id="@+id/mobile_authenticate_text"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mobile_authenticate_img"
                android:layout_marginLeft="@dimen/TableRow_img_width_height"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.11"
            android:orientation="horizontal"
            android:gravity="center_vertical|left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_title_size_info"
                android:textColor="@color/orderconfirm_success_bottom_btntextcolor"
                android:text="@string/myselfinfo_modifymobile_verifymobile"
                android:id="@+id/mobile_new_mobileverify_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.11"
            android:orientation="horizontal"
            android:gravity="center">
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/txt_padding_line"
        android:background="@color/new_viewbg">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/mobile_authenticate_layout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginRight="@dimen/searchlist_item_button_edit_width"
                android:orientation="horizontal"
                android:background="@color/white">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/mobile_mobile_edit"
                    style="@style/app_linearlayoutrightedit_style"
                    android:hint="@string/txt_phonenumber_hint"
                    android:textSize="@dimen/txt_title_size_small"
                    android:numeric="integer"
                    android:maxLength="11"
                    android:editable="false"
                    android:text=""/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/title_bar_linelayout_height"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/invoiceinfo_jsservicefee_width"
                android:background="@color/new_viewbg"/>

            <Button
                android:layout_width="@dimen/invoiceinfo_jsservicefee_width"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/txt_padding_line"
                android:layout_alignParentRight="true"
                android:id="@+id/mobile_captcha_btn"
                android:background="@color/white"
                android:textSize="@dimen/txt_title_size_small"
                android:textColor="@color/default_bluebg"
                android:text="@string/btn_securitycode"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_padding_line"
                android:layout_alignParentBottom="true"
                android:background="@color/new_viewbg"
                android:layout_marginLeft="@dimen/app_backbtn_marginleft"
                android:layout_marginRight="@dimen/app_backbtn_marginleft">
            </View>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:orientation="horizontal"
            android:background="@color/white">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mobile_captcha_edit"
                style="@style/app_linearlayoutrightedit_style"
                android:textSize="@dimen/txt_title_size_small"
                android:numeric="integer"
                android:editable="false"
                android:maxLength="6"
                android:textColorHint="@color/fragment_home_exclusive_show_view_bg"
                android:hint="@string/txt_code_hint"
                android:text=""/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/order_title_height"
            android:layout_marginTop="@dimen/order_type_layoutwidth"
            style="@style/appbottombtn_style"
            android:text="@string/myselfinfo_modifymobile_btn_text"
            android:id="@+id/mobile_modify_btn"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/new_mobile_authenticate_layout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginRight="@dimen/searchlist_item_button_edit_width"
                android:orientation="horizontal"
                android:background="@color/white">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/new_mobile_mobile_edit"
                    style="@style/app_linearlayoutrightedit_style"
                    android:numeric="integer"
                    android:maxLength="11"
                    android:hint="@string/txt_phonenumber_hint"
                    android:textSize="@dimen/txt_title_size_small"
                    android:text=""/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/title_bar_linelayout_height"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/invoiceinfo_jsservicefee_width"
                android:background="@color/new_viewbg"/>

            <Button
                android:layout_width="@dimen/invoiceinfo_jsservicefee_width"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/txt_padding_line"
                android:layout_alignParentRight="true"
                android:id="@+id/new_mobile_captcha_btn"
                android:background="@color/white"
                android:textSize="@dimen/txt_title_size_small"
                android:textColor="@color/default_bluebg"
                android:text="@string/btn_securitycode"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_padding_line"
                android:layout_alignParentBottom="true"
                android:background="@color/new_viewbg"
                android:layout_marginLeft="@dimen/app_backbtn_marginleft"
                android:layout_marginRight="@dimen/app_backbtn_marginleft">
            </View>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:orientation="horizontal"
            android:background="@color/white">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/new_mobile_captcha_edit"
                style="@style/app_linearlayoutrightedit_style"
                android:textSize="@dimen/txt_title_size_small"
                android:numeric="integer"
                android:editable="false"
                android:maxLength="6"
                android:textColorHint="@color/fragment_home_exclusive_show_view_bg"
                android:hint="@string/txt_code_hint"
                android:text=""/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/order_title_height"
            android:layout_marginTop="@dimen/order_type_layoutwidth"
            style="@style/appbottombtn_style"
            android:text="@string/myselfinfo_modifymobile_btn_text"
            android:id="@+id/new_mobile_modify_btn"/>
    </LinearLayout>

</LinearLayout>
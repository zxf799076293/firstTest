<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include
        layout="@layout/linhui_business_title_bar">
    </include>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:id="@+id/fieldinfo_all_res_info_tablayout"
        android:background="@color/white"
        app:tabMode="fixed"
        app:tabIndicatorColor="@color/default_bluebg"
        app:tabSelectedTextColor="@color/default_bluebg"
        app:tabTextColor="@color/headline_tv_color"
        app:tabIndicatorHeight="@dimen/tab_item_margintop"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/txt_padding_line"
        android:background="@color/top_title_line_color">
    </View>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fieldinfo_all_res_info_viewpager"
        android:background="@color/white"
        android:fadingEdge="none" >
    </android.support.v4.view.ViewPager>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/fieldinfo_toleft_addshopcard">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/regiter_linelayout_height"
        android:id="@+id/addfield_denominated_view"
        android:background="@color/white"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_layout_width_height"
        android:background="@color/white"
        android:visibility="visible"
        android:orientation="horizontal"
        android:id="@+id/addfield_denominated_fieldsizelayout">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/addfield_denominated_checkbox"
            android:checked="false"
            style="@style/MyInvoiceCheckBox"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:orientation="horizontal">
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/choosespecifications_pricetxtselect"
                android:id="@+id/addfield_denominated_edittext"
                android:textSize="@dimen/txt_title_size_nor"
                android:textColor="@color/default_bluebg"
                android:paddingLeft="@dimen/regiter_linelayout_height"
                android:hint="@string/txt_addfieldfour_fieldsizehinttxt"
                android:numeric="decimal"
                android:maxLength="14"
                android:textColorHint="@color/field_chair_textcolor"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ã—"
                    android:textColor="@color/default_bluebg"
                    android:textSize="25sp"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/choosespecifications_pricetxtselect"
                android:id="@+id/addfield_denominated_edittext_right"
                android:textSize="@dimen/txt_title_size_nor"
                android:textColor="@color/default_bluebg"
                android:paddingLeft="@dimen/regiter_linelayout_height"
                android:maxLength="14"
                android:hint="@string/txt_addfieldfour_fieldsizehinttxt"
                android:numeric="decimal"
                android:textColorHint="@color/field_chair_textcolor"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_linearlayout_bg">
    <include
        layout="@layout/linhui_business_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/choosespecifications_pricetxtheight"
        android:id="@+id/username_rl"
        android:visibility="gone"
        android:background="@color/default_warn_ll_bg">
        <com.linhuiba.business.view.MarqueTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/username_remind_ib"
            android:layout_marginLeft="@dimen/app_backbtn_marginleft"
            android:drawableLeft="@drawable/ic_prompt"
            android:drawablePadding="@dimen/txt_padding_left"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:textColor="@color/checked_tv_color"
            android:textSize="@dimen/register_codebtn_txt_size"
            android:text="@string/fieldinfo_username_remind_str"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
        <ImageButton
            android:layout_width="@dimen/btn_normal_height"
            android:layout_height="match_parent"
            android:src="@drawable/ic_close_blue_three"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:id="@+id/username_remind_ib" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/regiter_linelayout_height"
        android:background="@color/app_linearlayout_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/myself_ll_height"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contact_txt"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/title_bar_back_marginBottom"
            android:text="@string/myselfinfo_contactname"
            android:paddingRight="@dimen/user_info_account_width"
            android:textColor="@color/register_edit_color"
            android:textSize="@dimen/title_bar_title_txt_size"
            android:layout_centerVertical="true"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/app_backbtn_marginleft"
            android:layout_marginRight="@dimen/title_height"
            android:layout_toRightOf="@+id/contact_txt"
            android:id="@+id/modify_contact"
            android:textSize="@dimen/btnregister_txt_size"
            style="@style/RegisterEditStyle"
            android:background="@null"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/app_backbtn_marginleft"
            android:src="@drawable/ic_close_blue"
            android:id="@+id/set_username_close_iv"/>

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_linelayout_height"
        android:background="@color/app_samelinearlayout_bg"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_back_layout_width_height"
        android:id="@+id/search_choose_layout"
        android:background="@color/module_searchlist_area_screen_list_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/area_choose_img"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/app_backbtn_marginleft"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:layout_marginLeft="@dimen/app_backbtn_marginleft"
            android:id="@+id/list_text_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:layout_toLeftOf="@+id/area_choose_img"
            android:layout_marginRight="@dimen/txt_margin"
            android:text=""
            android:singleLine="true"
            android:textColor="@color/orderconfirm_success_bottom_btntextcolor"
            android:textSize="@dimen/login_leftright_txt_size"/>
        <ImageView
            android:layout_width="@dimen/text_title_next_padding"
            android:layout_height="@dimen/text_title_next_padding"
            android:background="@drawable/activity_searchlist_area_choosed_bg"
            android:id="@+id/search_area_imgv"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/app_backbtn_marginleft"
            android:layout_toRightOf="@+id/list_text_area"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/list_view"
            android:visibility="gone"
            android:background="@color/new_viewbg"
            android:layout_marginLeft="@dimen/app_backbtn_marginleft"
            android:layout_marginRight="@dimen/app_backbtn_marginleft"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/list_view_last"
            android:background="@color/new_viewbg"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/search_area_bottom_view"
            android:background="@color/new_viewbg"
            android:layout_marginLeft="@dimen/app_backbtn_marginleft"
            />
        <View
            android:layout_width="@dimen/txt_padding_line"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:id="@+id/search_area_right_view"
            android:background="@color/app_samelinearlayout_bg"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>
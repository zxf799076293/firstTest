<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/advertising_tffs_width"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/main_status_bar_ll"
        android:background="@color/default_bluebg">
    </LinearLayout>
    <FrameLayout
        android:id="@+id/realtabcontent"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_linelayout_height"
        android:background="@color/app_samelinearlayout_bg"/>
    <android.support.v4.app.FragmentTabHost
        android:id="@+id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/maintab_width"
        android:background="@color/white">
    </android.support.v4.app.FragmentTabHost>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    >
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_linelayout_height"
        android:background="@color/app_samelinearlayout_bg"
        android:id="@+id/advertising_item_view"/>
    <RelativeLayout
        android:layout_width="@dimen/no_review_listview_height"
        android:layout_height="@dimen/fieldinfo_map_Bottom_height"
        android:background="@color/white"
        android:id="@+id/gridview_img_layout"
        android:paddingTop="@dimen/userinfo_layout_margin"
        android:paddingBottom="@dimen/userinfo_layout_margin"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/gridview_img"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/gridview_img"
            android:id="@+id/gridview_img_relativelayout"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:background="#90333333">
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_linelayout_height"
        android:background="@color/app_samelinearlayout_bg"/>
</LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                            android:textColor="@color/white"
                            android:text="@string/fieldinfo_choose_specifications_deposit_str"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                            android:textColor="@color/white"
                            android:id="@+id/fieldinfo_choose_specifications_deposit_tv"
                            android:text="@string/search_deposit_label_tv_str"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                            android:textColor="@color/white"
                            android:text="@string/fieldinfo_choose_specifications_min_order_day_str"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                            android:textColor="@color/white"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fieldinfo_dialog_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/add_lab_width"
            android:orientation="vertical"
            android:id="@+id/choosepecifications_first_ll"
            android:layout_alignParentTop="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/GalleryView_height"
                android:orientation="vertical"
                android:background="@drawable/ic_fieldinfo_choose_date_ll_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_margin_width"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                        android:textColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/advertising_tffs_width"
                        android:id="@+id/fieldinfo_choose_specifications_description_tv"
                        android:text="@string/search_deposit_label_tv_str"
                        android:visibility="invisible"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/app_backbtn_marginleft"
                        android:layout_gravity="bottom"
                        android:src="@drawable/ic_close_white"
                        android:id="@+id/fieldinfo_choose_date_close_img"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/advertising_tffs_width">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                            android:textColor="@color/white"
                            android:text="@string/order_listitem_capacity_sizetxt"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                            android:textColor="@color/white"
                            android:id="@+id/fieldinfo_choose_specifications_stall_size_tv"
                            android:text=""/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                            android:textColor="@color/white"
                            android:text="@string/fieldinfo_choose_specifications_special_size_str"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fieldinfo_diogle_time_textsize"

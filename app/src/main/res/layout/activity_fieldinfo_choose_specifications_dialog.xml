                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/txt_padding_left"
                    android:paddingLeft="@dimen/advertising_tffs_width">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                            android:textColor="@color/white"
                            android:text="@string/fieldinfo_choose_specifications_time_unit_str"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                            android:textColor="@color/white"
                            android:id="@+id/fieldinfo_choose_specifications_time_unit_tv"
                            android:text=""/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                            android:textColor="@color/white"
                            android:text="@string/fieldinfo_days_in_advance_first_str"
                            android:id="@+id/fieldinfo_choose_size_reserve_first_tv"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                            android:textColor="@color/white"
                            android:id="@+id/fieldinfo_choose_specifications_days_in_advance_tv"
                            android:text=""/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                            android:textColor="@color/white"
                            android:text="@string/fieldinfo_days_in_advance_second_str"
                            android:id="@+id/fieldinfo_choose_size_reserve_second_tv"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_layout_width_height"
                android:orientation="horizontal"
                android:background="@color/white"
                android:gravity="center_horizontal">
                <ImageButton
                    android:layout_width="@dimen/home_Popular_marginleft"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:src="@drawable/ic_garyback"
                    android:id="@+id/fieldinfo_choosepecifications_prevMonth"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:id="@+id/fieldinfo_choosepecifications_currentMonth"
                    android:gravity="center"
                    android:textSize="@dimen/txt_title_size_small"
                    android:textColor="@color/top_title_center_txt_color"
                    android:text="2016å¹´7æœˆ"/>
                <ImageButton

                    android:layout_height="match_parent"
                    android:background="@null"
                    android:src="@drawable/ic_grayswitch"
                    android:id="@+id/fieldinfo_choosepecifications_nextMonth"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_margin_width"
                android:background="@color/calendar_bg">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="æ—¥"
                    android:textColor="@color/register_edit_color"

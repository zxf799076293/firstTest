                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="äºŒ"
                    android:textColor="@color/register_edit_color"
                    android:textSize="@dimen/txt_title_size_info"/>

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="ä¸‰"
                    android:textColor="@color/register_edit_color"
                    android:textSize="@dimen/txt_title_size_info"/>

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="å››"
                    android:textColor="@color/register_edit_color"
                    android:textSize="@dimen/txt_title_size_info"/>

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="äº”"
                    android:textColor="@color/register_edit_color"
                    android:textSize="@dimen/txt_title_size_info"/>

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="å…­"
                    android:textColor="@color/register_edit_color"
                    android:textSize="@dimen/txt_title_size_info"/>
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/order_title_height"
            android:layout_alignParentBottom="true"
            android:id="@+id/choosespecifications_btn_layout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_title_height"
                android:visibility="visible"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:id="@+id/choosespecifications_paid_order_layout">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/activity_fieldinfo_addcard_btn_bg"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_bar_title_center_txt_size"
                    android:text="@string/fieldinfo_addcard_tv_str"
                    android:id="@+id/fieldinfo_choose_addcard_button"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/activity_fieldinfo_paid_order_btn_bg"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_bar_title_center_txt_size"
                    android:text="@string/choosespecifications_paid_order_text"
                    android:id="@+id/fieldinfo_choose_paid_order_btn"/>

            </LinearLayout>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:id="@+id/choosepecifications_scrollview"
            android:background="@color/white"
            android:layout_above="@+id/choosespecifications_btn_layout"
            android:layout_below="@+id/choosepecifications_first_ll">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/choosefieldlayout"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/week_layout_bg"
                        android:orientation="vertical"
                        android:id="@+id/fieldinfo_viewflipperlayout">
                        <ViewFlipper
                            android:id="@+id/fieldinfo_choosepecifications_flipper"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:visibility="visible">
                        </ViewFlipper>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

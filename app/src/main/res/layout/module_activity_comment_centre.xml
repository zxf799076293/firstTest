<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_linearlayout_bg">
    <include layout="@layout/linhui_business_title_bar">
    </include>
    <View
        style="@style/DefaultLongViewStyle">
    </View>
    <RelativeLayout
        android:id="@+id/coment_centre_no_data_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_nodata_toast"
            android:textSize="@dimen/txt_title_size"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="fill_horizontal|center_vertical" />
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/comment_centre_swiperefreshll">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/comment_centre_rv">
        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
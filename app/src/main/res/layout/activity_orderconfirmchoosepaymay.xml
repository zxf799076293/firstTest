<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_linearlayout_bg"
    android:id="@+id/orderconfirmchoosepayment_alllayout">
    <include
        layout="@layout/linhui_business_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_linelayout_height"
        android:background="@color/top_title_line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/app_linearlayoutrighttxt_style"
            android:text="@string/confirmorder_pay_way"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_linelayout_height"
        android:background="@color/app_samelinearlayout_bg">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:paddingLeft="@dimen/field_info_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/weixin_pay_checkbox"
            android:paddingLeft="@dimen/field_info_height"
            android:textColor="@color/top_title_center_txt_color"
            android:textSize="@dimen/txt_title_size_small"
            android:checked="true"
            android:text="@string/confirmorder_weixin_paie"
            style="@style/MyorderCheckBox"
            android:layout_centerVertical="true"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:id="@+id/order_balance_payment_layout"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/field_info_height"
            android:id="@+id/order_balance_payment_checkbox"
            android:paddingLeft="@dimen/field_info_height"
            android:textColor="@color/top_title_center_txt_color"
            android:checked="false"
            android:text="@string/orderconfirm_balance_payment_text"
            style="@style/MyorderCheckBox"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/review_layout_height"
            android:textColor="@color/orderconfirm_success_bottom_btntextcolor"
            android:textSize="@dimen/txt_title_size_info"
            android:id="@+id/order_balance_text"
            android:layout_marginRight="@dimen/app_backbtn_marginleft"
            android:text="@string/orderconfirm_available_balance_text"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_linelayout_height"
            android:background="@color/app_samelinearlayout_bg"
            android:layout_alignParentTop="true">
        </View>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/order_account_pay_layout">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/order_account_pay_checkbox"
            android:paddingLeft="@dimen/field_info_height"
            android:layout_marginLeft="@dimen/field_info_height"
            android:textColor="@color/top_title_center_txt_color"
            android:checked="false"
            android:text="@string/confirmorder_account_pay_checkprompt"
            style="@style/MyorderCheckBox"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/review_layout_height"
            android:textColor="@color/orderconfirm_success_bottom_btntextcolor"
            android:textSize="@dimen/txt_title_size_info"
            android:layout_marginRight="@dimen/app_backbtn_marginleft"
            android:text="@string/confirmorder_offline_pay_prompttext"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_linelayout_height"
            android:background="@color/app_samelinearlayout_bg"
            android:layout_alignParentTop="true">
        </View>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_layout_width_height"
        android:background="@color/white"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/txt_padding_line"
            android:background="@color/new_viewbg">
        </View>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_marginLeft="@dimen/app_backbtn_marginleft"
            android:id="@+id/alipay_pay_checkbox"
            android:paddingLeft="@dimen/field_info_height"
            android:textColor="@color/top_title_center_txt_color"
            android:textSize="@dimen/txt_title_size_small"
            android:checked="false"
            android:text="@string/confirmorder_alipay_paie"
            style="@style/MyorderCheckBox"
            android:layout_centerVertical="true"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_layout_width_height"
        android:layout_marginTop="@dimen/order_type_layoutwidth"
        style="@style/appbottombtn_style"
        android:text="@string/confirm"
        android:id="@+id/orderconfirm_pay_btn"/>
</LinearLayout>
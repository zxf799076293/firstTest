<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/app_backbtn_marginleft"
            android:orientation="horizontal"
            android:background="@drawable/activity_search_field_area_tv_bg"
            android:gravity="center_vertical">
            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_margin_width"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/activity_search_field_area_tv_bg"
                android:drawableLeft="@drawable/img_search"
                android:drawablePadding="@dimen/maintab_paddingtop"
                android:paddingLeft="@dimen/maintab_paddingtop"
                android:id="@+id/searchcity_keyword_search_et"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:hint="@string/module_searchcity_search_et_hint_str"
                android:textSize="@dimen/txt_title_size_small"
                android:textColorHint="@color/home_search_hintcolor"
                android:textColor="@color/headline_tv_color"
                android:imeOptions="actionSearch"/>
            <RelativeLayout
                android:layout_width="@dimen/btn_margin_width"
                android:layout_height="@dimen/home_area_drop_height"
                android:background="@drawable/activity_search_field_area_tv_bg"
                android:id="@+id/searchcity_keyword_close_rl">
                <TextView
                    android:layout_width="@dimen/myself_red_prompt_width"
                    android:layout_height="@dimen/myself_red_prompt_width"
                    android:visibility="gone"
                    android:id="@+id/searchcity_keyword_close_tv"
                    android:background="@drawable/ic_close_blue"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="@dimen/small_title_height"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/txt_title_size_nor"
            android:textColor="@color/default_bluebg"
            android:textStyle="bold"
            android:text="@string/cancel"
            android:id="@+id/searchcity_keyword_cancel_tv"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white"
        android:visibility="gone"
        android:id="@+id/searchcity_no_list_tv"
        android:paddingLeft="@dimen/app_backbtn_marginleft"
        android:gravity="center_vertical"
        android:textColor="@color/headline_tv_color"
        android:textSize="@dimen/login_leftright_txt_size"
        android:text="@string/module_searchcity_no_city_list_msg_str"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:visibility="gone"
        android:dividerHeight="0dp"
        android:id="@+id/searchcity_keyword_lv">
    </ListView>

</LinearLayout>
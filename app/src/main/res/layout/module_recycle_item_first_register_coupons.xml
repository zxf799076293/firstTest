<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/module_coupons_first_register_list_bg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/first_register_coupons_item_ll"
            android:background="@drawable/_three_sevenimage_youhuiquan3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/module_coupons_first_register_coupons_price_color"
                    android:textSize="@dimen/fieldinfo_chair_textsize"
                    android:layout_marginRight="@dimen/tab_item_margintop"
                    android:textStyle="bold"
                    android:text="@string/order_listitem_price_unit_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/module_coupons_first_register_coupons_price_color"
                    android:textSize="@dimen/search_lisritem_pricetxt_size"
                    android:textStyle="bold"
                    android:id="@+id/first_register_coupons_price_tv"
                    android:text="444"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/module_coupons_first_register_coupons_price_color"
                    android:textSize="@dimen/fieldinfo_chair_textsize"
                    android:id="@+id/first_register_coupons_res_price_tv"
                    android:text="444"/>

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/txt_margin"
            android:background="@color/module_coupons_first_register_list_bg">
        </View>
    </LinearLayout>

</LinearLayout>
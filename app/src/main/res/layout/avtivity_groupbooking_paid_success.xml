<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_linearlayout_bg">
    <include
        layout="@layout/linhui_business_title_bar">
    </include>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/txt_padding_line"
        android:background="@color/app_linearlayout_bg">
    </View>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/calendar_height"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_success"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/myself_order_img_width"
                    android:textColor="@color/headline_tv_color"
                    android:textSize="@dimen/search_lisritem_pricetxt_size"
                    android:text="@string/field_pay_order"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_title_next_padding"
                    android:textColor="@color/groupbooking_info_success_notification_tv_color"
                    android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                    android:text="@string/groupbooding_info_success_notification_str"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/invoiceinfoentry_marginleft"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="@dimen/groupbooking_info_paid_success_check_order_width"
                        android:layout_height="@dimen/order_field_advertising_type_width"
                        android:background="@drawable/activity_searchlist_item_subsidy_bg"
                        android:textColor="@color/headline_tv_color"
                        android:textSize="@dimen/login_leftright_txt_size"
                        android:gravity="center"
                        android:text="@string/groupbooding_info_look_order_btn_str"
                        />
                    <TextView
                        android:layout_width="@dimen/groupbooking_info_paid_success_check_order_width"
                        android:layout_height="@dimen/order_field_advertising_type_width"
                        android:layout_marginLeft="@dimen/home_gridview_texttwo_marginleft"
                        android:background="@drawable/map_type_title_towbg"
                        android:textColor="@color/white"
                        android:textSize="@dimen/login_leftright_txt_size"
                        android:gravity="center"
                        android:text="@string/groupbooding_info_look_order_btn_str" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/txt_padding_left">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/app_backbtn_marginleft"
                        android:layout_marginBottom="@dimen/txt_margin"
                        android:layout_marginLeft="@dimen/app_backbtn_marginleft"
                        android:textSize="@dimen/title_bar_title_center_txt_size"
                        android:textColor="@color/headline_tv_color"
                        android:text="@string/home_recommend_title_text"/>
                </LinearLayout>
                <com.linhuiba.business.view.MyGridview
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/app_backbtn_marginleft"
                    android:paddingRight="@dimen/app_backbtn_marginleft"
                    android:horizontalSpacing="@dimen/txt_padding_left"
                    android:verticalSpacing="@dimen/txt_padding_left"
                    android:id="@+id/fieldinfo_recommend_gridlistview"
                    android:numColumns="2"
                    android:scrollbars="none"
                    android:background="@color/app_linearlayout_bg"
                    android:paddingBottom="@dimen/app_backbtn_marginleft"
                    android:gravity="center"
                    android:visibility="visible">
                </com.linhuiba.business.view.MyGridview>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
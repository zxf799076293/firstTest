<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_linearlayout_bg"
    android:id="@+id/orderinfo_all_layout">
    <include
        layout="@layout/linhui_business_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_linelayout_height"
        android:background="@color/top_title_line_color"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/favorites_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorapp_gb"
        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/orderinfo_listview"
            android:background="@color/app_linearlayout_bg"
            android:divider="@color/app_linearlayout_bg"
            android:dividerHeight="@dimen/title_bar_back_marginLeft">

        </ListView>

    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingRight="@dimen/txt_padding"
    android:paddingLeft="@dimen/txt_padding"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="@dimen/no_review_listview_height"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/themes_gridview_img_layout"
            android:paddingTop="@dimen/txt_padding"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/themes_gridview_img"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/field_info_marginleft"
                    android:layout_marginLeft="@dimen/txt_padding"
                    android:layout_marginBottom="@dimen/txt_padding"
                    android:paddingLeft="@dimen/tab_item_img_margintop"
                    android:paddingRight="@dimen/tab_item_img_margintop"
                    android:layout_alignLeft="@+id/themes_gridview_img"
                    android:layout_alignBottom="@+id/themes_gridview_img"
                    android:text="小区"
                    android:visibility="gone"
                    android:background="@drawable/activity_fieldinfo_new_fieldtype_bg"
                    android:gravity="center"
                    android:id="@+id/home_fieldlist_txt_fieldtitle"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tab_txt_size" />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/order_pay_width"
            android:orientation="vertical"
            android:visibility="visible"
            android:background="@drawable/activity_themesinfo_listitem_price_layout_bg"
            android:id="@+id/themes_gridview_price_layout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/tab_item_img_margintop"
                android:layout_marginRight="@dimen/tab_item_img_margintop"
                android:gravity="center_vertical"
                android:id="@+id/themes_fieldname_layout"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/txt_title_size_info"
                    android:textColor="@color/top_title_center_txt_color"
                    android:text=""
                    android:id="@+id/themes_txt_name"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/tab_item_img_margintop"
                android:layout_marginRight="@dimen/tab_item_img_margintop"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textSize="@dimen/fieldinfo_chair_textsize"
                    android:textColor="@color/home_gridview_texttwo_color"
                    android:text=""
                    android:id="@+id/themes_txt_price"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="clip_vertical"
                        android:singleLine="true"
                        android:visibility="gone"
                        android:textSize="@dimen/fieldinfo_chair_textsize"
                        android:textColor="@color/field_chair_textcolor"
                        android:text="@string/home_dailysale_original_price_str"
                        android:id="@+id/themes_original_price_textview"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="clip_vertical"
                        android:singleLine="true"
                        android:textSize="@dimen/fieldinfo_chair_textsize"
                        android:textColor="@color/field_chair_textcolor"
                        android:text=""
                        android:id="@+id/themes_txt_numberofpeople_textview"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
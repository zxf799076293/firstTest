<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:gravity="center">
            <ImageView
                android:id="@+id/groupbooking_tab_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false">
            </ImageView>
            <TextView
                android:id="@+id/groupbooking_tab_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/txt_margin"
                android:text="首页"
                android:textColor="@color/orderconfirm_success_bottom_btntextcolor"
                android:textSize="@dimen/text_title_size_next">
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="@dimen/txt_padding_line"
            android:layout_height="match_parent"
            android:background="@color/app_linearlayout_bg"
            android:layout_marginTop="@dimen/txt_padding_left"
            android:layout_marginBottom="@dimen/txt_padding_left"
            android:id="@+id/groupbooking_tab_view"
            android:layout_alignParentRight="true">
        </View>

    </RelativeLayout>

</LinearLayout>
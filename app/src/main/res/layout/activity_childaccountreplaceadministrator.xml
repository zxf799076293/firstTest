<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_linearlayout_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/replaceadministrator_topview">
        <include
            layout="@layout/linhui_business_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/title_bar_linelayout_height"
            android:background="@color/top_title_line_color" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_linearlayout_bg"
        android:orientation="vertical"
        android:layout_below="@+id/replaceadministrator_topview">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/order_type_layoutwidth"
            android:background="@color/white"
            android:paddingLeft="@dimen/app_backbtn_marginleft"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textSize="@dimen/txt_title_size_small"
            android:textColor="@color/title_bar_txtcolor"
            android:text="@string/childaccount_replace"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/title_bar_linelayout_height"
            android:background="@color/new_viewbg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/app_linearlayout_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/app_linearlayoutrighttxt_style"
                    android:text="@string/myselfinfo_phonenum_txt"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/replaceadministrator_mobile_edit"
                    style="@style/app_linearlayoutrightedit_style"
                    android:editable="false"
                    android:maxLength="11"
                    android:numeric="integer"
                    android:hint="@string/txt_phonenumber_hint"
                    android:text=""/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/title_bar_linelayout_height"
                android:layout_marginLeft="@dimen/app_backbtn_marginleft"
                android:layout_marginRight="@dimen/app_backbtn_marginleft"
                android:background="@color/new_viewbg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_height"
                    android:layout_marginRight="@dimen/searchlist_item_button_edit_width"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/app_linearlayoutrighttxt_style"
                        android:text="@string/enterprise_certification_captcha_text"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/replaceadministrator_captcha_edit"
                        style="@style/app_linearlayoutrightedit_style"
                        android:hint="@string/txt_code_hint"
                        android:text=""/>
                </LinearLayout>
                <View
                    android:layout_width="@dimen/title_bar_linelayout_height"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/invoiceinfo_jsservicefee_width"
                    android:background="@color/new_viewbg"/>

                <Button
                    android:layout_width="@dimen/invoiceinfo_jsservicefee_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:id="@+id/replaceadministrator_captcha_btn"
                    android:background="@color/white"
                    android:textSize="@dimen/btnregister_txt_size"
                    android:textColor="@color/default_bluebg"
                    android:text="@string/btn_securitycode"/>

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/title_bar_linelayout_height"
                android:layout_marginLeft="@dimen/app_backbtn_marginleft"
                android:layout_marginRight="@dimen/app_backbtn_marginleft"
                android:background="@color/new_viewbg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:orientation="horizontal"
                android:id="@+id/replaceadministrator_choose_layout"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/app_linearlayoutrighttxt_style"
                    android:text="@string/childaccount_binding_administrator_text"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:id="@+id/changeadmin_name_text"
                    style="@style/app_linearlayoutrightedit_style"
                    android:drawableRight="@drawable/ic_into_three"
                    android:paddingRight="@dimen/txt_margin"
                    android:hint="@string/childaccount_binding_administrator_hint_text"
                    android:text=""/>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_info_account_width"
            android:layout_marginTop="@dimen/home_Popular_marginleft"
            android:id="@+id/replaceadministrator_btn"
            android:text="@string/confirm"
            style="@style/appbottombtn_style"/>
        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/choildaccount_changeadmin_layout"
        android:background="@color/app_linearlayout_bg"
        android:layout_below="@+id/replaceadministrator_topview"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/replaceadministrator_success_information"
            android:background="@drawable/loadmorelistview_bg"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/advertising_box_width"
            android:layout_marginLeft="@dimen/advertising_box_width"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/review_button_width"
                android:background="@drawable/activity_confirmorder_success_title_bg"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check_success"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/user_info_photo_height"
                android:gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/title_bar_txtcolor"
                        android:paddingRight="@dimen/app_backbtn_marginleft"
                        android:id="@+id/new_administrator_name"
                        android:textSize="@dimen/txt_title_size_small"
                        android:visibility="gone"
                        android:text=""/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/new_administrator_mobile"
                        android:textColor="@color/title_bar_txtcolor"
                        android:textSize="@dimen/txt_title_size_small"
                        android:visibility="gone"
                        android:text=""/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/maintab_paddingtop"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/title_bar_txtcolor"
                    android:textSize="@dimen/txt_title_size_small"
                    android:text="@string/childaccount_binding_administrator_success_text"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <include
        layout="@layout/linhui_business_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_linelayout_height"
        android:background="@color/top_title_line_color"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_title_height"
                    android:id="@+id/edit_mobile"
                    android:textSize="@dimen/btnregister_txt_size"
                    style="@style/RegisterEditStyle"
                    android:numeric="integer"
                    android:hint="@string/txt_phonenumber_newhint_text"
                    android:singleLine="true"
                    android:maxLength="11" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/txt_padding_line"
                    android:background="@color/new_viewbg"
                    android:layout_marginLeft="@dimen/app_backbtn_marginleft"
                    android:layout_marginRight="@dimen/app_backbtn_marginleft">
                </View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_title_height"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_toLeftOf="@+id/captcha_layout">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/edit_code"
                            style="@style/RegisterEditStyle"
                            android:hint="@string/txt_code_hint"
                            android:maxLength="6"
                            android:numeric="integer"
                            android:singleLine="true"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/addshoppingcard_width"
                        android:layout_height="@dimen/advertising_box_width"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/app_backbtn_marginleft"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:id="@+id/captcha_layout">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/login_leftright_txt_size"
                            android:id="@+id/btncode"
                            android:gravity="center"
                            android:clickable="false"
                            android:text="@string/txt_register_codebtn_txt"
                            android:textColor="@color/white"
                            android:background="@drawable/register_btn_unenable_bg"/>
                    </LinearLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/title_bar_linelayout_height"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/app_backbtn_marginleft"
                        android:layout_marginRight="@dimen/review_layout_height"
                        android:background="@color/new_viewbg"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/txt_padding_line"
                    android:background="@color/new_viewbg"
                    android:layout_marginLeft="@dimen/app_backbtn_marginleft"
                    android:layout_marginRight="@dimen/app_backbtn_marginleft">
                </View>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_title_height"
                    style="@style/RegisterEditStyle"
                    android:id="@+id/edit_password"
                    android:hint="@string/register_password_hint"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/txt_padding_line"
                    android:background="@color/new_viewbg"
                    android:layout_marginLeft="@dimen/app_backbtn_marginleft"
                    android:layout_marginRight="@dimen/app_backbtn_marginleft">
                </View>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_title_height"
                    style="@style/RegisterEditStyle"
                    android:id="@+id/confirm_pw"
                    android:hint="@string/txt_confirm_pw_hint"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/txt_padding_line"
                    android:background="@color/new_viewbg"
                    android:layout_marginLeft="@dimen/app_backbtn_marginleft"
                    android:layout_marginRight="@dimen/app_backbtn_marginleft">
                </View>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_info_account_width"
                    android:layout_marginTop="@dimen/order_type_layoutwidth"
                    android:layout_marginLeft="@dimen/app_backbtn_marginleft"
                    android:layout_marginRight="@dimen/app_backbtn_marginleft"
                    android:background="@color/register_unclick_color"
                    android:clickable="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_bar_title_center_txt_size"
                    android:id="@+id/btnfindpassword"
                    android:text="@string/pw_find"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
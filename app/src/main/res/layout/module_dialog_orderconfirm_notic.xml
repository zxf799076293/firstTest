<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginTop="@dimen/field_list_item_img_width"
            android:layout_marginBottom="@dimen/field_list_item_img_width"
            android:layout_marginRight="@dimen/myself_order_img_width"
            android:layout_marginLeft="@dimen/myself_order_img_width"
            android:background="@drawable/activity_confirmorder_success_layout_bg"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/headline_tv_color"
                android:textSize="@dimen/title_bar_title_txt_size"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/btn_margin_width"
                android:text="@string/module_orderconfirm_creat_order_notice"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/field_info_marginleft">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/field_list_item_label_samll"
                        android:layout_marginRight="@dimen/field_list_item_label_samll"
                        android:textColor="@color/orderconfirm_success_bottom_btntextcolor"
                        android:textSize="@dimen/fieldinfo_diogle_time_textsize"
                        android:text="@string/module_orderconfirm_creat_order_notice_msg"/>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fieldinfo_error_recovery_image_height"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/title_height"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/field_list_item_label_samll"
                    android:gravity="center"
                    android:textColor="@color/headline_tv_color"
                    android:textSize="@dimen/btnregister_txt_size"
                    android:textStyle="bold"
                    android:id="@+id/module_orderconfirm_notice_refuce_tv"
                    android:background="@drawable/module_orderconfirm_creat_order_notice_refuce_btn_bg"
                    android:text="@string/btn_refuse"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/title_height"
                    android:layout_weight="1"
                    android:id="@+id/module_orderconfirm_notice_agee_tv"
                    android:layout_marginLeft="@dimen/txt_padding_left"
                    android:layout_marginRight="@dimen/field_list_item_label_samll"
                    android:gravity="center"
                    android:background="@drawable/loginbtn_bg"
                    android:textColor="@color/white"
                    android:textSize="@dimen/btnregister_txt_size"
                    android:textStyle="bold"
                    android:text="@string/btn_agree"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>